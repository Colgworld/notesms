extends layout

block content
  .container
    h1 #{title}
    table.table.table-bordered(style='width:100%', border='1')
      thead
        tr
          th(scope='col') Id
          th(scope='col') Username
          th(scope='col') PhoneNumber
      tbody
        thead
          tr
            td(scope='row') #{user.id}
            td #{user.username}
            td #{user.phoneNumber}
            td #{user.notes}

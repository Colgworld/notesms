extends layout

block content
  .container
    h1 #{title}
    table.table.table-bordered(style='width:100%', border='1')
      thead
        tr
          th(scope='col') Username
          th(scope='col') Notes
          th(scope='col') Delete
          th(scope='col') Update
      tbody
            tr
              td= user.username
              td
                p(href= results.id)= results.text
              td  
                a(href= results.id + "/delete")
                  button(type="button") delete note
              td  
                a(href= results.id + "/update")
                  button(type="button") update note
